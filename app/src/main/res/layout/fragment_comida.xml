<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Reminder.Fragments.ComidaFragment"
    android:id="@+id/fragment_comida">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/tab_lunch"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <CheckBox
            android:id="@+id/cbco1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Falda de res" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilComPorcion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietComPorcion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Porción"/>

        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/cbco2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 taza de coliflor cocida" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilComPorcion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietComPorcion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Porción"/>

        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/cbco3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 cucharada (5mil) de aceite de oliva" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilComPorcion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietComPorcion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Porción"/>

        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/cbco4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lentejas" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilComPorcion4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietComPorcion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Porción"/>

        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/cbco5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arroz integral al vapor" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilComPorcion5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietComPorcion5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Porción"/>

        </android.support.design.widget.TextInputLayout>


        <CheckBox
            android:id="@+id/cbco6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agua: alfalfa c/limón" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilComPorcion6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="64dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietComPorcion6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Porción"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="64dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilComTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toStartOf="@+id/btnComTime"
                app:layout_constraintStart_toStartOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tietComTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hora de la comida"
                    android:inputType="time" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/btnComTime"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/button_blue_shape"
                android:src="@drawable/ic_alarm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

</ScrollView>