<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tvMeatsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_dialogContent_default"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cbMeat1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:buttonTint="@color/colorAccent" />

                <CheckBox
                    android:id="@+id/cbMeat2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:buttonTint="@color/colorAccent" />

                <CheckBox
                    android:id="@+id/cbMeat3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:buttonTint="@color/colorAccent" />

                <CheckBox
                    android:id="@+id/cbMeat4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/cbMeat5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:buttonTint="@color/colorAccent" />

                <CheckBox
                    android:id="@+id/cbMeat6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:buttonTint="@color/colorAccent" />

                <CheckBox
                    android:id="@+id/cbMeat7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:buttonTint="@color/colorAccent" />

                <CheckBox
                    android:id="@+id/cbMeat8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:buttonTint="@color/colorAccent" />

                <CheckBox
                    android:id="@+id/cbMeat9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:buttonTint="@color/colorAccent" />

                <CheckBox
                    android:id="@+id/cbMeat10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:buttonTint="@color/colorAccent" />

            </RadioGroup>

        </LinearLayout>

    </ScrollView>

</LinearLayout>