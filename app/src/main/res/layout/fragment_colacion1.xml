<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reminder.Fragments.Colacion1Fragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/tab_collation1"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <CheckBox
        android:id="@+id/cbc11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yogurt natural light/griego" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilCo1Porcion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietCo1Porcion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Porción"/>

    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/cbc12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plátano chico rebanado" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilCo1Porcion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietCo1Porcion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Porción"/>

    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/cbc13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Almendras" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilCo1Porcion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietCo1Porcion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Porción"/>

    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/cbc14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agua natural" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilCo1Porcion4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietCo1Porcion4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Porción"/>

    </android.support.design.widget.TextInputLayout>
</LinearLayout>