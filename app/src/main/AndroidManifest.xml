<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diazmain.obapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme2">
        <activity android:name=".Home.HomeActivity">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->

        </activity>
        <activity android:name=".Home.Fragments.Perfil" />
        <activity
            android:name=".Login.SignInActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Login.SplashScreen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Login.SignUpActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".Reminder.ReminderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home.HomeActivity" />
        </activity>
        <activity android:name=".Home.ChangePassword" />

        <service
            android:name=".Notification.NotificationJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity
            android:name=".Login.AlternativeLoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Reminder.BreakfastActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home.HomeActivity" />
        </activity>
        <activity android:name=".Reminder.FirstCollationActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home.HomeActivity" />
        </activity>
        <activity android:name=".Reminder.MealActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home.HomeActivity" />
        </activity>
        <activity android:name=".Reminder.SecondCollationActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home.HomeActivity" />
        </activity>
        <activity android:name=".Reminder.DinnerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home.HomeActivity" />
        </activity>
    </application>

</manifest>